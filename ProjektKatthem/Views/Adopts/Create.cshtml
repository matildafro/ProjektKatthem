@model ProjektKatthem.Models.Adopt

@{
    ViewData["Title"] = "Lägg till adoption";
}

<div class="infocolor">
    <h1>Lägg till adoption</h1>
    <a asp-action="Index" class="btn btn-dark">Tillbaka</a>
</div>

<div class="edition">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdoptName" class="control-label"></label>
                <input asp-for="AdoptName" class="form-control" />
                <span asp-validation-for="AdoptName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pickup" class="control-label"></label>
                <input asp-for="Pickup" class="form-control" />
                <span asp-validation-for="Pickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatsId" class="control-label"></label>
                <select asp-for="CatsId" class="form-control" asp-items="ViewBag.CatsId"></select>
            </div>


        <div class="form-group" style="margin-top: 8px">
            <input type="submit" value="Lägg till adoption" class="btn btn-success" />
        </div>
        </form>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
